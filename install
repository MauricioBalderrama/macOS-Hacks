#!/bin/bash

# libs
bash <(curl -L https://raw.githubusercontent.com/MauricioBalderrama/macOS-Hacks/master/config)

echo $cloneFolder
# download repository
if [[ ! -d ${cloneFolder} ]]; then
    # clone
    echo ""
    echo "Cloning ${repositoryName}..."
    git clone git@github.com:${gitHubUsername}/${gitHubRepositoryName}.git ${cloneFolder}
else
    # update
    echo ""
    echo "Updating ${repositoryName}..."
    cd $cloneFolder
    git pull origin master
fi

# setup
cd ${cloneFolder}/${setupSubFolder}
source setup
